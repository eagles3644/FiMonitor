<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/hist_list_item_padding"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_header_pad_bottom">

        <TextView
            android:id="@+id/hist_wifi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/hist_wifi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/hist_wifi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="225dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/hist_wifi_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="225dp"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/hist_wifi_time"/>

        <ImageView
            android:id="@+id/hist_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_location" />

        <RelativeLayout
            android:id="@+id/hist_msg2_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hist_location_icon"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/hist_wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signal_wifi_2_bar"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/hist_wifi_message2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="75dp"
                android:maxWidth="75dp"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/hist_wifi_icon"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>